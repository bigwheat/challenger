<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoodsType"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red_little"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stock_in_white_radius0"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/rlDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tvGoodsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="- - -"
                        android:textColor="@color/black_transfer"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAdapterModels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl4"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="4dp"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:text="- - -"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/circleProgressbar"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/next_scan" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="所在库位" />

                    <TextView
                        android:id="@+id/tvAllocationSn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:text="- - -"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/rl2"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/rlCheckedEntriesCount"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvIsChecked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="已盘点" />

                    <TextView
                        android:id="@+id/tvCheckedEntriesCount"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvIsChecked"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_et_line_bottom"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <!--<EditText-->
                        <!--android:id="@+id/etCheckedEntriesCount"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_below="@+id/tv3"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:background="@drawable/bg_et_line_bottom"-->
                        <!--android:hint=""-->
                        <!--android:imeOptions="actionSearch"-->
                        <!--android:singleLine="true"-->
                        <!--android:inputType="number"-->
                        <!--android:paddingBottom="5dp"-->
                        <!--android:paddingLeft="5dp"-->
                        <!--android:paddingRight="20dp"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:textColor="@color/colorPrimary"-->
                        <!--android:textColorHint="@color/colorPrimary"-->
                        <!--android:textSize="15sp" />-->



                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>